{{#if item.length}}
  {{#each item}}
    <div class="row course">
      <div class="col s12 m3 center">
        <div class="card">
          <div class="card-image">
            <img src="https://i.ytimg.com/vi/rw4-S3KtHoU/maxresdefault.jpg">
            <span class="card-title">Card Title</span>
          </div>
          <div class="card-content">
            <p>{{title}}</p>
          </div>
          <div class="card-content">
            <p>{{cost}}</p>
          </div>
          <div class="card-action">
            <a href="#" >Buy</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}

<div class="col s2"><h3> No items yet... </h3></div>
{{/if}}
